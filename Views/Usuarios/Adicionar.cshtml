@model AdicionarUsuarioViewModel

@{
    ViewBag.Title = "Novo usu√°rio";
    Layout = "_Layout";
}

<form asp-action="Adicionar">
    <div class="row mb-3">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" required>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" type="email" class="form-control" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Telefone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Telefone" class="form-control" required>
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Senha" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Senha" type="password" class="form-control" required>
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ConfirmacaoSenha" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ConfirmacaoSenha" type="password" class="form-control" required>
            <span asp-validation-for="ConfirmacaoSenha" class="text-danger"></span>
        </div>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success">Enviar</button>
    </div>
</form>